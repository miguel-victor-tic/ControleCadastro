@model List<ControleEmpresasModel>
@{
    ViewData["Title"] = "Cadastro de Empresa";
}

<div class= "text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Cadastro" asp-action="CadastrarEmpresa">Nova empresa</a>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"] 
    </div>
    }


    <br />
<h1 class="display-4">Empresas cadastradas</h1>

<table class="table" id="table-empresas">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">CNPJ</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
         @if(Model != null && Model.Any())
            {
                foreach (ControleEmpresasModel controleEmpresas in Model)
                {
                    <tr>
                      <th scope="row">@controleEmpresas.Id</th>
                      <td>@controleEmpresas.Nome</td>
                      <td>@controleEmpresas.Cnpj</td>
                      <td>
                          <div class="btn-group" role="group">
                            <a role="button" class="btn btn-warning" asp-route-id="@controleEmpresas.Id" asp-controller="Cadastro" asp-action="AlteraEmpresa">Alterar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@controleEmpresas.Id" asp-controller="Cadastro" asp-action="ApagarEmpresa">Apagar</a>
                            <a role="button" class="btn btn-info">Filtrar</a>
                          </div>
                      </td>
                    </tr>
                }
            }
  </tbody>
</table>
</div>