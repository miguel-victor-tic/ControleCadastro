@model ControleAssociadosModel
@{
    ViewData["Title"] = "Cadastro de associado";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar novo Associado  </h1>

</div>

<form asp-controller="Cadastro" asp-action="CadastrarAssociado" method="post">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text"
               asp-for="Nome"
               class="form-control"
               maxlength="200"
               placeholder="Informe o nome do associado">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cpf">CPF</label>
        <input type="text"
               asp-for="Cpf"
               class="form-control"
               maxlength="11"
               placeholder="Informe apenas os numeros do CPF do associado">
        @Html.ValidationMessageFor(x => x.Cpf)
    </div>

    <div class="form-group">
        <label for="dtNascimento">Data de Nascimento</label>
        <input type="date"
               asp-for="Dt"
               class="form-control"
               placeholder="Informe a data de nascimento do associado">
        @Html.ValidationMessageFor(x => x.Dt)
    </div>

    <br />
    <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Cadastro" asp-action="Associado" role="button">Voltar</a>
</form> 