@model ControleEmpresasModel
@{
    ViewData["Title"] = "Alteração de Empresa";
}

<div class="text-center">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />
    <h1 class="display-4">Alteração de Empresas  </h1>
</div>

<form asp-controller="Cadastro" asp-action="AlteraEmpresa" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" maxlength="200" asp-for="Nome" placeholder="Informe o nome da empresa">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="cnpj">CNPJ</label>
        <input type="text" class="form-control" asp-for="Cnpj" maxlength="14" placeholder="Informe apenas os numeros do CNPJ da empresa">

        @Html.ValidationMessageFor(x => x.Cnpj)
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Cadastro" asp-action="Empresa" role="button">Voltar</a>

    <br /><hr />

    <div class="text-center">
        <h1 class="display-4">Associado(s) vinculado(s)</h1>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Cadastro" asp-action="Vincular">Vincular associado</a>
    </div>

    <br />

    <table class="table">

        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">  </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>altera1</td>
                <td>altera2</td>
                <td>altera3</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-danger">Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>

    </table>
</form>